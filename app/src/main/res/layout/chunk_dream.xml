<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="gravity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4800B8D4">

        <ImageView
            android:id="@+id/darkImage"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_alignLeft="@id/dreamImage"
            android:layout_alignTop="@+id/dreamImage"
            android:layout_alignEnd="@+id/dreamImage"
            android:layout_alignBottom="@+id/dreamImage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:alpha="0.75"
            app:srcCompat="@android:color/black" />

        <ImageView
            android:id="@+id/dreamImage"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:alpha=".7"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignStart="@id/dreamImage"
            android:layout_alignTop="@id/dreamImage"
            android:layout_alignEnd="@id/dreamImage"
            android:layout_alignBottom="@id/dreamImage"
            android:layout_marginStart="18dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="75dp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/previewText"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_below="@+id/dreamImage"
            android:layout_alignStart="@id/dreamImage"
            android:layout_alignTop="@id/dateText"
            android:layout_alignEnd="@id/dreamImage"
            android:layout_alignBottom="@+id/dreamImage"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-light"
            android:textAlignment="gravity"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="italic" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>